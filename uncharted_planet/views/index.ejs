<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <title>Scientists</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/main.css" />
</head>

<body>
    <header class="header">
        <h2 class="exo">Exobiology</h2>
        <nav>
            <div class="nav"><a href="/planet/new">Create</a></div>
            <div class="nav"><a href="/">Home</a></div>
        </nav>

    </header>
    <div class="all">
        <h1 class="list">List of Scientists</h1>
        <form action="/planet/all?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete All</button>
        </form>
        <table class="table">
            <tbody>
                <% scientists.forEach((person, index) => { %>
                <tr>
                    <th scope="row"><%= index + 1; %></th>
                    <td><a href="/planet/<%=index%>"> <%= person.name %></a></td>
                    <td>
                        <form action="/planet/<%= index %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-warning">Delete</button>
                        </form>
                    </td>
                    <td><a href="/planet/<%=index%>/edit">Edit</a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
</body>

</html>